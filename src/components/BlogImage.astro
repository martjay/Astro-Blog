import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
}

const { src, alt, width, height } = Astro.props;

<Image 
  src={src} 
  alt={alt} 
  width={width || 800} 
  height={height || 600}
  class="rounded-lg max-w-full h-auto"
/> 